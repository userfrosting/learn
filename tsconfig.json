{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "app/assets/**/*.js",
        "app/assets/**/*.ts",
        "app/assets/**/*.d.ts",
        "app/assets/**/*.vue",
    ],
    "exclude": [
        "vite.config.ts"
    ],
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "baseUrl": ".",
        "rootDir": "app/assets",
        "outDir": "public/assets/",
        "allowJs": true,
        "types": ["@modyfi/vite-plugin-yaml/modules"]
    },
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}