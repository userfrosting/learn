{% macro tree(items) %}
    {% for item in items %}
        {% if item.children is not empty %}
            {{ _self.dropdown(item) }}
        {% else %}
            {{ _self.link(item.getTitle(), item.getRoute()) }}
        {% endif %}
    {% endfor %}
{% endmacro %}

{% macro link(label, href = '#', active = false) %}
    <li>
        <a href="{{ href }}">{{ label }}</a>
    </li>
{% endmacro %}

{% macro dropdown(item) %}
    <li class="uk-parent">
        <a href="{{ item.getRoute() }}">
            {{ item.getTitle() }}
            <span uk-nav-parent-icon></span>
        </a>
        <ul class="uk-nav-sub">
            {{ _self.tree(item.children) }}
        </ul>
    </li>
{% endmacro %}

{% macro label(label) %}
    <li class="uk-nav-header">{{ label }}</li>
{% endmacro %}
